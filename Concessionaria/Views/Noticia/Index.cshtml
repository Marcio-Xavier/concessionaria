@model IEnumerable<Concessionaria.Models.Noticia>

@{
    ViewBag.Title = "Notícias";
}
<div class="container body-content">
    <h3>Lista de Notícias</h3>
    <hr />
    <p>
        @Html.ActionLink("Adicionar Notícia", "Create")
        <i class="fa fa-plus" aria-hidden="true"></i>
    </p>
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataDePublicacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DataDePublicacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autor)
                </td>

                <td>
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    @Html.ActionLink("Editar", "Edit", new { id = item.ID })
                </td>
                <td>
                    <i class="fa fa-info" aria-hidden="true"></i>
                    @Html.ActionLink("Detalhes", "Details", new { id = item.ID })
                </td>
                <td>
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                    @Html.ActionLink("Remover", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</div>